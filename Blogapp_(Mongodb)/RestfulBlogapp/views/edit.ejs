<%- include ('partials/header.ejs') -%>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit Blog "<%= id.title %>"</div>
        <!--HTML forms support only Get and post so we use method overide concept to Delete-->
        <form class="ui form" action="/blog/<%=id.id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%=id.title%>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%=id.image%>">
            </div>
            <div class="field">
                <label>Body</label>
                <textarea type="text" name="blog[body]"><%=id.body%></textarea>
            </div>
            <input class="ui big violet basic button" type="submit">
        </form>
    </div>
<%- include ('partials/footer.ejs') -%>