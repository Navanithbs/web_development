<%- include('partials/header') -%>
    <div class="ui container">
        <img src="<%=id.image%>">
        <h1><%=id.title%></h1>
        <h5><%=id.created%></h5>
        <h5><%=id.body%></h5>
        <a class="ui green button" href="/blog/<%=id.id%>/edit">Edit</a>
        <a class="ui blue button" href="/blog">Go back</a>
        <br><br>
        <!--HTML forms support only Get and post so we use method overide concept to Delete-->
        <form action="/blog/<%= id.id %>?_method=DELETE" method="POST"> 
        <button class="ui red button">Delete</button>
    </form>
    </div>
<%- include('partials/footer') -%>