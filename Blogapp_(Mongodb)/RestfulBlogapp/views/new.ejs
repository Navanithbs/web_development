<%- include ('partials/header.ejs') -%>
<style>
    body{
        background-color: indigo;
    }
</style>
    <div class="ui main text container segment">
        <div class="ui huge header">New Blog</div>
        <form class="ui form" action="/blog" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="title">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="image">
            </div>
            <div class="field">
                <label>Body</label>
                <textarea type="text" name="blog[body]" placeholder="body"></textarea>
            </div>
            <button class="ui big violet basic button">Submit</button>
        </form>
</div>
