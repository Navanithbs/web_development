<%- include ('partials/header.ejs') -%>
<div class="container">
    <div class="jumbotron">
        <h1><strong>This is Campgrounds page<i class="fas fa-campground"></i></strong></h1>
        <a class="btn btn-lg btn-outline-primary" href="/campground/new">Add new Campground</a>
    </div>
    <div class="row">
        <% index.forEach(function(campground){%>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card">
                <img src="<%=campground.img%>">
                <div class="card-body">
                    <h3><%=campground.name%></h3>
                    <a href="/campground/<%=campground.id%>"class="btn btn-lg btn-primary">more info..</a>
                </div>
                </div>
            </div>
            <% })%>
    </div>
</div>
<%- include ('partials/footer.ejs') -%>
